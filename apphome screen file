import 'package:flutter/material.dart';
import 'package:email_securax/screens/gmail_integration_screen.dart';
import 'package:email_securax/screens/outlook/outlook_integration_screen.dart';
import 'package:email_securax/screens/file_url_scan/file_url_scan_screen.dart';
import 'package:email_securax/screens/hibp/hibp_screen.dart';
import 'package:email_securax/screens/training/security_training_screen.dart';
import '../AppTheme.dart';
import '../models/TabData.dart';
import 'BottomBarView.dart';
import 'MainScreen.dart';

class AppHomeScreen extends StatefulWidget {
  final int initialIndex;

  const AppHomeScreen({
    Key? key,
    this.initialIndex = -1,
  }) : super(key: key);

  @override
  _AppHomeScreenState createState() => _AppHomeScreenState();
}

class _AppHomeScreenState extends State<AppHomeScreen> with TickerProviderStateMixin {
  AnimationController? animationController;
  List<TabData> tabIconsList = TabData.tabIconsList;
  int currentIndex = TabData.TAB_INDEX_MAIN;

  @override
  void initState() {
    super.initState();
    
    for (var tab in tabIconsList) {
      tab.isSelected = false;
    }

    currentIndex = widget.initialIndex;
    if (currentIndex >= TabData.TAB_INDEX_EMAIL_SECURITY) {
      tabIconsList[currentIndex].isSelected = true;
    }

    animationController = AnimationController(
      duration: const Duration(milliseconds: 600),
      vsync: this,
    );
  }

  @override
  void dispose() {
    animationController?.dispose();
    super.dispose();
  }

  Widget getTabBody() {
    switch (currentIndex) {
      case TabData.TAB_INDEX_EMAIL_SECURITY:
        return _buildEmailSecurityView();
        
      case TabData.TAB_INDEX_FILE_URL_SCAN:
        return const FileUrlScanScreen();
        
      case TabData.TAB_INDEX_IDENTITY_MONITORING:
        return const HibpScreen();
        
      case TabData.TAB_INDEX_SECURITY_TRAINING:
        return const SecurityTrainingScreen();
        
      default:
        return MainScreen(animationController: animationController);
    }
  }

  Widget _buildEmailSecurityView() {
    return Scaffold(
      backgroundColor: AppTheme.background,
      body: Center(
        child: Padding(
          padding: const EdgeInsets.all(24),
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              const Icon(
                Icons.email,
                size: 80,
                color: AppTheme.nearlyDarkBlue,
              ),
              const SizedBox(height: 24),
              const Text(
                'Email Security Scanner',
                style: TextStyle(
                  fontSize: 28,
                  fontWeight: FontWeight.bold,
                  color: AppTheme.darkText,
                ),
              ),
              const SizedBox(height: 12),
              Text(
                'Choose your email provider to scan for threats',
                textAlign: TextAlign.center,
                style: TextStyle(
                  fontSize: 16,
                  color: AppTheme.grey,
                ),
              ),
              const SizedBox(height: 48),
              
              _buildProviderCard(
                title: 'Gmail',
                subtitle: 'Scan your Gmail inbox for threats',
                icon: Icons.mail,
                color: Colors.red,
                onTap: () {
                  Navigator.push(
                    context,
                    MaterialPageRoute(
                      builder: (context) => const GmailIntegrationScreen(),
                    ),
                  );
                },
              ),
              
              const SizedBox(height: 16),
              
              _buildProviderCard(
                title: 'Outlook',
                subtitle: 'Scan your Outlook/Office 365 inbox',
                icon: Icons.mail_outline,
                color: Colors.blue,
                onTap: () {
                  Navigator.push(
                    context,
                    MaterialPageRoute(
                      builder: (context) => const OutlookIntegrationScreen(),
                    ),
                  );
                },
              ),
            ],
          ),
        ),
      ),
    );
  }

  Widget _buildProviderCard({
    required String title,
    required String subtitle,
    required IconData icon,
    required Color color,
    required VoidCallback onTap,
  }) {
    return Card(
      elevation: 4,
      shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(16)),
      child: InkWell(
        onTap: onTap,
        borderRadius: BorderRadius.circular(16),
        child: Container(
          padding: const EdgeInsets.all(24),
          child: Row(
            children: [
              Container(
                padding: const EdgeInsets.all(16),
                decoration: BoxDecoration(
                  color: color.withOpacity(0.1),
                  borderRadius: BorderRadius.circular(12),
                ),
                child: Icon(icon, size: 40, color: color),
              ),
              const SizedBox(width: 20),
              Expanded(
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    Text(
                      title,
                      style: const TextStyle(
                        fontSize: 20,
                        fontWeight: FontWeight.bold,
                        color: AppTheme.darkText,
                      ),
                    ),
                    const SizedBox(height: 4),
                    Text(
                      subtitle,
                      style: TextStyle(
                        fontSize: 14,
                        color: AppTheme.grey,
                      ),
                    ),
                  ],
                ),
              ),
              Icon(Icons.arrow_forward_ios, color: color),
            ],
          ),
        ),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Container(
      color: AppTheme.background,
      child: Scaffold(
        backgroundColor: Colors.transparent,
        body: FutureBuilder<bool>(
          future: getData(),
          builder: (BuildContext context, AsyncSnapshot<bool> snapshot) {
            if (!snapshot.hasData) {
              return const SizedBox();
            } else {
              return Stack(
                children: <Widget>[
                  getTabBody(),
                  bottomBar(),
                ],
              );
            }
          },
        ),
      ),
    );
  }

  Future<bool> getData() async {
    await Future<dynamic>.delayed(const Duration(milliseconds: 200));
    return true;
  }

  Widget bottomBar() {
    return Column(
      children: <Widget>[
        const Expanded(child: SizedBox()),
        BottomBarView(
          tabIconsList: tabIconsList,
          addClick: () {},
          changeIndex: (int index) {
            animationController?.reverse().then<dynamic>((data) {
              if (!mounted) return;
              setState(() {
                currentIndex = index;
              });
            });
          },
        ),
      ],
    );
  }
}
