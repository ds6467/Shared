import 'package:email_securax/AppTheme.dart';
import 'package:email_securax/services/enhanced_multi_service_email_scanner.dart';
import 'package:email_securax/models/email_model.dart';
import 'package:flutter/material.dart';

import 'AppHomeScreen.dart';
import 'custom_drawer/DrawerUserController.dart';
import 'custom_drawer/HomeDrawer.dart';

class NavigationHomeScreen extends StatefulWidget {
  final int screenKey;
  final EnhancedMultiServiceEmailScanner? scanner;  // ‚úÖ Accept scanner
  final List<EmailModel>? emails;                   // ‚úÖ Accept emails

  const NavigationHomeScreen({
    Key? key,
    this.screenKey = -1,
    this.scanner,
    this.emails,
  }) : super(key: key);

  @override
  _NavigationHomeScreenState createState() => _NavigationHomeScreenState();
}

class _NavigationHomeScreenState extends State<NavigationHomeScreen> {
  Widget? screenView;
  DrawerIndex? drawerIndex;

  @override
  void initState() {
    super.initState();
    drawerIndex = DrawerIndex.HOME;
    
    // ‚úÖ Pass scanner and emails to AppHomeScreen
    screenView = AppHomeScreen(
      initialIndex: widget.screenKey,
      scanner: widget.scanner,
      emails: widget.emails,
    );

    print('‚úÖ NavigationHomeScreen initialized');
    print('   Screen key: ${widget.screenKey}');
    print('   Scanner available: ${widget.scanner != null}');
    print('   Emails count: ${widget.emails?.length ?? 0}');
  }

  @override
  Widget build(BuildContext context) {
    return Container(
      color: AppTheme.white,
      child: SafeArea(
        top: false,
        bottom: false,
        child: Scaffold(
          backgroundColor: AppTheme.nearlyWhite,
          body: DrawerUserController(
            screenIndex: drawerIndex,
            drawerWidth: MediaQuery.of(context).size.width * 0.75,
            onDrawerCall: (DrawerIndex drawerIndexdata) {
              changeIndex(drawerIndexdata);
            },
            screenView: screenView,
            // ‚úÖ Pass scanner and emails to drawer if needed
            scanner: widget.scanner,
            emails: widget.emails,
          ),
        ),
      ),
    );
  }

  void changeIndex(DrawerIndex drawerIndexdata) {
    if (drawerIndex != drawerIndexdata) {
      drawerIndex = drawerIndexdata;
      
      switch (drawerIndex) {
        case DrawerIndex.HOME:
          setState(() {
            // ‚úÖ Pass scanner and emails when returning to home
            screenView = AppHomeScreen(
              initialIndex: -1,
              scanner: widget.scanner,
              emails: widget.emails,
            );
          });
          break;
          
        case DrawerIndex.Help:
          setState(() {
            screenView = _buildHelpScreen();
          });
          break;
          
        case DrawerIndex.FeedBack:
          setState(() {
            screenView = _buildFeedbackScreen();
          });
          break;
          
        case DrawerIndex.Invite:
          setState(() {
            screenView = _buildInviteScreen();
          });
          break;
          
        case DrawerIndex.Share:
          // ‚úÖ Handle share functionality
          _handleShare();
          break;
          
        case DrawerIndex.About:
          setState(() {
            screenView = _buildAboutScreen();
          });
          break;
          
        case DrawerIndex.Testing:
          // ‚úÖ Optional: Testing/Debug screen
          setState(() {
            screenView = _buildTestingScreen();
          });
          break;
          
        default:
          break;
      }
    }
  }

  // ‚úÖ Help Screen
  Widget _buildHelpScreen() {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Help & Support'),
        backgroundColor: AppTheme.nearlyDarkBlue,
        foregroundColor: Colors.white,
      ),
      body: ListView(
        padding: const EdgeInsets.all(16),
        children: [
          _buildHelpCard(
            'How to Scan Emails',
            'Navigate to Email Security tab and select an email from the list. The app will automatically scan it using multiple threat intelligence sources.',
            Icons.email,
          ),
          _buildHelpCard(
            'Understanding Threat Levels',
            'üü¢ Green: Safe\nüü† Orange: Suspicious\nüî¥ Red: Dangerous\n\nAlways verify suspicious emails before taking action.',
            Icons.security,
          ),
          _buildHelpCard(
            'File & URL Scanning',
            'Use the File & URL Scan tab to manually check suspicious files or links before opening them.',
            Icons.search,
          ),
          _buildHelpCard(
            'Identity Monitoring',
            'Check if your email or passwords have been compromised in known data breaches using the Identity Monitoring tab.',
            Icons.person_search,
          ),
        ],
      ),
    );
  }

  Widget _buildHelpCard(String title, String description, IconData icon) {
    return Card(
      margin: const EdgeInsets.only(bottom: 16),
      child: Padding(
        padding: const EdgeInsets.all(16),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Row(
              children: [
                Icon(icon, color: AppTheme.nearlyDarkBlue),
                const SizedBox(width: 12),
                Expanded(
                  child: Text(
                    title,
                    style: const TextStyle(
                      fontSize: 18,
                      fontWeight: FontWeight.bold,
                    ),
                  ),
                ),
              ],
            ),
            const SizedBox(height: 12),
            Text(
              description,
              style: TextStyle(
                color: AppTheme.grey,
                height: 1.5,
              ),
            ),
          ],
        ),
      ),
    );
  }

  // ‚úÖ Feedback Screen
  Widget _buildFeedbackScreen() {
    final TextEditingController feedbackController = TextEditingController();

    return Scaffold(
      appBar: AppBar(
        title: const Text('Feedback'),
        backgroundColor: AppTheme.nearlyDarkBlue,
        foregroundColor: Colors.white,
      ),
      body: Padding(
        padding: const EdgeInsets.all(16),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.stretch,
          children: [
            const Text(
              'We value your feedback!',
              style: TextStyle(
                fontSize: 20,
                fontWeight: FontWeight.bold,
              ),
            ),
            const SizedBox(height: 8),
            Text(
              'Let us know how we can improve EmailSecuraX',
              style: TextStyle(color: AppTheme.grey),
            ),
            const SizedBox(height: 24),
            TextField(
              controller: feedbackController,
              maxLines: 8,
              decoration: InputDecoration(
                hintText: 'Enter your feedback here...',
                border: OutlineInputBorder(
                  borderRadius: BorderRadius.circular(8),
                ),
              ),
            ),
            const SizedBox(height: 16),
            ElevatedButton(
              onPressed: () {
                // TODO: Implement feedback submission
                ScaffoldMessenger.of(context).showSnackBar(
                  const SnackBar(
                    content: Text('Thank you for your feedback!'),
                    backgroundColor: AppTheme.nearlyGreen,
                  ),
                );
                feedbackController.clear();
              },
              style: ElevatedButton.styleFrom(
                backgroundColor: AppTheme.nearlyDarkBlue,
                foregroundColor: Colors.white,
                padding: const EdgeInsets.symmetric(vertical: 16),
              ),
              child: const Text('Submit Feedback'),
            ),
          ],
        ),
      ),
    );
  }

  // ‚úÖ Invite Screen
  Widget _buildInviteScreen() {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Invite Friends'),
        backgroundColor: AppTheme.nearlyDarkBlue,
        foregroundColor: Colors.white,
      ),
      body: Center(
        child: Padding(
          padding: const EdgeInsets.all(24),
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              const Icon(
                Icons.people,
                size: 100,
                color: AppTheme.nearlyDarkBlue,
              ),
              const SizedBox(height: 24),
              const Text(
                'Invite your friends to EmailSecuraX',
                style: TextStyle(
                  fontSize: 20,
                  fontWeight: FontWeight.bold,
                ),
                textAlign: TextAlign.center,
              ),
              const SizedBox(height: 16),
              Text(
                'Help others protect themselves from email scams',
                style: TextStyle(color: AppTheme.grey),
                textAlign: TextAlign.center,
              ),
              const SizedBox(height: 32),
              ElevatedButton.icon(
                onPressed: () {
                  // TODO: Implement invite functionality
                  ScaffoldMessenger.of(context).showSnackBar(
                    const SnackBar(
                      content: Text('Invite feature coming soon!'),
                    ),
                  );
                },
                icon: const Icon(Icons.share),
                label: const Text('Share App'),
                style: ElevatedButton.styleFrom(
                  backgroundColor: AppTheme.nearlyDarkBlue,
                  foregroundColor: Colors.white,
                  padding: const EdgeInsets.symmetric(
                    horizontal: 32,
                    vertical: 16,
                  ),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }

  // ‚úÖ About Screen
  Widget _buildAboutScreen() {
    return Scaffold(
      appBar: AppBar(
        title: const Text('About EmailSecuraX'),
        backgroundColor: AppTheme.nearlyDarkBlue,
        foregroundColor: Colors.white,
      ),
      body: ListView(
        padding: const EdgeInsets.all(16),
        children: [
          Card(
            child: Padding(
              padding: const EdgeInsets.all(16),
              child: Column(
                children: [
                  const Icon(
                    Icons.security,
                    size: 80,
                    color: AppTheme.nearlyDarkBlue,
                  ),
                  const SizedBox(height: 16),
                  const Text(
                    'EmailSecuraX',
                    style: TextStyle(
                      fontSize: 24,
                      fontWeight: FontWeight.bold,
                    ),
                  ),
                  const SizedBox(height: 8),
                  const Text(
                    'Version 1.0.0',
                    style: TextStyle(color: AppTheme.grey),
                  ),
                  const SizedBox(height: 16),
                  const Divider(),
                  const SizedBox(height: 16),
                  Text(
                    'Advanced email security powered by:',
                    style: TextStyle(
                      fontWeight: FontWeight.bold,
                      color: AppTheme.grey,
                    ),
                  ),
                  const SizedBox(height: 12),
                  _buildServiceBadge('VirusTotal'),
                  _buildServiceBadge('MXToolbox'),
                  _buildServiceBadge('Spamhaus'),
                  _buildServiceBadge('Google Web Risk'),
                  _buildServiceBadge('AbuseIPDB'),
                  _buildServiceBadge('Cisco Talos'),
                ],
              ),
            ),
          ),
          const SizedBox(height: 16),
          Card(
            child: ListTile(
              leading: const Icon(Icons.privacy_tip, color: AppTheme.nearlyDarkBlue),
              title: const Text('Privacy Policy'),
              trailing: const Icon(Icons.arrow_forward_ios, size: 16),
              onTap: () {
                // TODO: Show privacy policy
              },
            ),
          ),
          Card(
            child: ListTile(
              leading: const Icon(Icons.article, color: AppTheme.nearlyDarkBlue),
              title: const Text('Terms of Service'),
              trailing: const Icon(Icons.arrow_forward_ios, size: 16),
              onTap: () {
                // TODO: Show terms of service
              },
            ),
          ),
        ],
      ),
    );
  }

  Widget _buildServiceBadge(String serviceName) {
    return Container(
      margin: const EdgeInsets.only(bottom: 8),
      padding: const EdgeInsets.symmetric(horizontal: 12, vertical: 6),
      decoration: BoxDecoration(
        color: AppTheme.nearlyDarkBlue.withOpacity(0.1),
        borderRadius: BorderRadius.circular(16),
      ),
      child: Text(
        serviceName,
        style: const TextStyle(
          color: AppTheme.nearlyDarkBlue,
          fontSize: 12,
          fontWeight: FontWeight.w500,
        ),
      ),
    );
  }

  // ‚úÖ Testing Screen (for development/debugging)
  Widget _buildTestingScreen() {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Testing & Debug'),
        backgroundColor: AppTheme.nearlyDarkBlue,
        foregroundColor: Colors.white,
      ),
      body: ListView(
        padding: const EdgeInsets.all(16),
        children: [
          Card(
            child: ListTile(
              leading: const Icon(Icons.email, color: AppTheme.nearlyDarkBlue),
              title: const Text('Test Email Scanning'),
              subtitle: Text('Emails loaded: ${widget.emails?.length ?? 0}'),
              trailing: const Icon(Icons.arrow_forward_ios, size: 16),
              onTap: () {
                // Navigate to email security tab
                setState(() {
                  screenView = AppHomeScreen(
                    initialIndex: 0,
                    scanner: widget.scanner,
                    emails: widget.emails,
                  );
                });
              },
            ),
          ),
          Card(
            child: ListTile(
              leading: const Icon(Icons.settings, color: AppTheme.nearlyDarkBlue),
              title: const Text('Scanner Status'),
              subtitle: Text(
                widget.scanner != null 
                    ? 'All services initialized ‚úÖ' 
                    : 'Scanner not initialized ‚ùå'
              ),
            ),
          ),
          Card(
            child: ListTile(
              leading: const Icon(Icons.info, color: AppTheme.nearlyDarkBlue),
              title: const Text('Cache Statistics'),
              subtitle: const Text('Tap to view cache info'),
              trailing: const Icon(Icons.arrow_forward_ios, size: 16),
              onTap: () {
                // TODO: Show cache statistics
              },
            ),
          ),
        ],
      ),
    );
  }

  // ‚úÖ Handle share functionality
  void _handleShare() {
    // TODO: Implement share using share_plus package
    ScaffoldMessenger.of(context).showSnackBar(
      const SnackBar(
        content: Text('Share functionality coming soon!'),
      ),
    );
  }
}
